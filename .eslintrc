{
  "extends": "rackt",
  "rules": {
    "valid-jsdoc": 2,
    // Disable until Flow supports let and const
    "no-var": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-no-undef": 2,
    "react/wrap-multilines": 2,
    "object-curly-spacing": [2, "always"],
    "no-unused-vars": [1],
    "no-constant-condition": 1,
    "no-console": 1
  },
  "plugins": [
    "react"
  ]
}
